/* ============================================
   CONTAINER Y CARD PRINCIPAL
============================================ */

.ver-factura-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 1rem;
}

.ver-factura-card {
    background: var(--card-bg, rgba(255, 255, 255, 0.04));
    border: 1px solid var(--border-color, rgba(255, 255, 255, 0.1));
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}


/* ============================================
   HEADER
============================================ */

.ver-factura-header {
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--border-color, rgba(255, 255, 255, 0.1));
    background: rgba(0, 0, 0, 0.15);
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
}

.factura-title {
    margin: 0;
    font-size: 1.35rem;
    font-weight: 600;
    color: var(--text-primary, inherit);
}

.btn-reimprimir {
    padding: 0.65rem 1.25rem;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.9rem;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    white-space: nowrap;
}

.btn-reimprimir:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}


/* ============================================
   BODY
============================================ */

.ver-factura-body {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}


/* ============================================
   SECCIONES
============================================ */

.section-title {
    margin: 0 0 0.75rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary, inherit);
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border-color, rgba(255, 255, 255, 0.1));
}

.info-section,
.medidas-section,
.items-section,
.totales-section {
    padding: 1.25rem;
    border-radius: 12px;
    background: var(--section-bg, rgba(0, 0, 0, 0.1));
    border: 1px solid var(--border-color, rgba(255, 255, 255, 0.08));
}


/* ============================================
   INFO CLIENTE
============================================ */

.info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
}

.info-item {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
}

.info-label {
    font-size: 0.75rem;
    opacity: 0.7;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.info-value {
    font-size: 0.95rem;
    color: var(--text-primary, inherit);
}

.badge-pago {
    display: inline-block;
    padding: 0.35rem 0.75rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.8rem;
    background: rgba(46, 204, 113, 0.15);
    color: #2ecc71;
    border: 1px solid rgba(46, 204, 113, 0.25);
    width: fit-content;
}


/* ============================================
   MEDIDAS
============================================ */

.medidas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
}

.medida-ojo {
    padding: 1rem;
    border-radius: 10px;
    background: var(--item-bg, rgba(0, 0, 0, 0.1));
    border: 1px solid var(--border-color, rgba(255, 255, 255, 0.08));
}

.ojo-title {
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    color: var(--primary, #667eea);
}

.medida-valores {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    font-size: 0.85rem;
}

.medida-valores strong {
    color: var(--text-primary, inherit);
}


/* ============================================
   ITEMS / PRODUCTOS
============================================ */

.items-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.item-row {
    display: grid;
    grid-template-columns: 1fr auto auto;
    gap: 1rem;
    align-items: center;
    padding: 1rem;
    border-radius: 10px;
    background: var(--item-bg, rgba(0, 0, 0, 0.1));
    border: 1px solid var(--border-color, rgba(255, 255, 255, 0.08));
}

.item-info {
    min-width: 0;
}

.item-nombre {
    font-weight: 600;
    font-size: 0.95rem;
    margin-bottom: 0.25rem;
    color: var(--text-primary, inherit);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item-tipo {
    font-size: 0.8rem;
    opacity: 0.7;
}

.item-cantidad {
    font-size: 0.85rem;
    opacity: 0.8;
    white-space: nowrap;
}

.item-total {
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--primary, #667eea);
    white-space: nowrap;
}


/* ============================================
   TOTALES
============================================ */

.totales-section {
    background: var(--totales-bg, rgba(0, 0, 0, 0.15));
}

.total-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    font-size: 0.95rem;
}

.total-row strong {
    font-size: 1.05rem;
}

.total-final {
    margin-top: 0.5rem;
    padding-top: 1rem;
    border-top: 2px solid var(--border-color, rgba(255, 255, 255, 0.15));
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--primary, #667eea);
}

.total-final strong {
    font-size: 1.4rem;
}


/* ============================================
   RESPONSIVE - TABLETS (max-width: 768px)
============================================ */

@media (max-width: 768px) {
    .header-content {
        flex-direction: column;
        align-items: stretch;
    }
    .btn-reimprimir {
        width: 100%;
    }
    .info-grid {
        grid-template-columns: 1fr;
    }
    .medidas-grid {
        grid-template-columns: 1fr;
    }
}


/* ============================================
   RESPONSIVE - MÓVILES (max-width: 480px)
============================================ */

@media (max-width: 480px) {
    .ver-factura-container {
        padding: 0.75rem;
    }
    .ver-factura-header {
        padding: 1rem;
    }
    .factura-title {
        font-size: 1.15rem;
    }
    .ver-factura-body {
        padding: 1rem;
    }
    .section-title {
        font-size: 0.95rem;
    }
    .info-section,
    .medidas-section,
    .items-section,
    .totales-section {
        padding: 1rem;
    }
    .item-row {
        grid-template-columns: 1fr;
        gap: 0.5rem;
        padding: 0.85rem;
    }
    .item-cantidad,
    .item-total {
        text-align: left;
    }
    .total-final strong {
        font-size: 1.25rem;
    }
}


/* ============================================
   RESPONSIVE - MÓVILES PEQUEÑOS (max-width: 360px)
============================================ */

@media (max-width: 360px) {
    .ver-factura-container {
        padding: 0.5rem;
    }
    .ver-factura-header {
        padding: 0.85rem;
    }
    .ver-factura-body {
        padding: 0.85rem;
    }
    .factura-title {
        font-size: 1.05rem;
    }
    .btn-reimprimir {
        padding: 0.6rem 1rem;
        font-size: 0.85rem;
    }
}


/* ============================================
   MODO CLARO (Light Mode Override)
============================================ */

@media (prefers-color-scheme: light) {
    .ver-factura-card {
        --card-bg: white;
        --border-color: #e5e7eb;
        --text-primary: #1f2937;
        --section-bg: #f9fafb;
        --item-bg: #f3f4f6;
        --totales-bg: #f9fafb;
    }
}


/* ============================================
   TICKET / FACTURA (IMPRESIÓN)
============================================ */

.ticket {
    display: none;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    font-size: 11px;
    line-height: 1.25;
    color: #000;
    width: 80mm;
    background: #fff;
}

.no-print {
    display: block;
}


/* ===== Estilos del ticket ===== */

.t-center {
    text-align: center;
}

.t-right {
    text-align: right;
}

.t-bold {
    font-weight: 700;
}

.t-small {
    font-size: 11px;
}

.t-hr {
    border-top: 1px dashed #000;
    margin: 8px 0;
}

.t-cut {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.t-table-head,
.t-table-row {
    display: grid;
    grid-template-columns: 12mm 1fr 10mm 14mm 14mm;
    gap: 2mm;
    margin: 4px 0;
}

.t-table-head {
    font-weight: 700;
}

.t-kv {
    display: flex;
    justify-content: space-between;
    margin: 2px 0;
}


/* ===== Impresión 80mm (TM-T20) ===== */

@media print {
    @page {
        size: 80mm auto;
        margin: 0;
    }
    html,
    body {
        margin: 0 !important;
        padding: 0 !important;
        width: 80mm !important;
        background: #fff !important;
    }
    /* oculta todo siempre */
    body * {
        display: none !important;
        visibility: hidden !important;
    }
    /* SOLO se imprime el ticket */
    .ticket,
    .ticket * {
        display: block !important;
        visibility: visible !important;
    }
    .ticket {
        position: fixed !important;
        left: 0 !important;
        top: 0 !important;
        width: 80mm !important;
        padding: 6mm 4mm !important;
        font-family: monospace !important;
        font-size: 11px !important;
        line-height: 1.25 !important;
        color: #000 !important;
    }
}