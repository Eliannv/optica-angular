rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/usuarios/$(request.auth.uid));
    }

    function isAdmin() {
      return isSignedIn() && userDoc().data.rol == 1; // ADMINISTRADOR
    }

    // Alternativa al custom claim `request.auth.token.sucursal`.
    // Usamos el campo `sucursal` del documento del usuario.
    function hasSucursalPasaje() {
      return isSignedIn() && userDoc().data.sucursal == "PASAJE";
    }

    // Validar que el usuario esté activo (autorizado)
    function isActive() {
      return isSignedIn() && userDoc().data.activo == true;
    }

    // Operador autorizado: sucursal PASAJE + activo
    function isAuthorizedOperator() {
      return hasSucursalPasaje() && isActive();
    }

    // ------------------ USUARIOS ------------------
    match /usuarios/{uid} {
      // Leer:
      // - El propio documento siempre
      // - Todos los usuarios si pertenece a sucursal PASAJE
      // - Admin también puede leer todo
      // - Permitir lectura limitada para verificar cédula durante registro (sin auth)
      allow read: if (isSignedIn() && request.auth.uid == uid) || hasSucursalPasaje() || isAdmin() || true;

      // Crear su propio documento después de registrarse
      allow create: if isSignedIn() && request.auth.uid == uid;

      // Actualizar/Eliminar: el propio usuario o un administrador
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
    }

    // ------------------ CLIENTES ------------------
    match /clientes/{clienteId} {
      allow read, write: if isAdmin() || isAuthorizedOperator();

      // Subcolección historialClinico
      match /historialClinico/{documento} {
        allow read, write: if isAdmin() || isAuthorizedOperator();
      }
    }

    // ------------------ PRODUCTOS ------------------
    match /productos/{productoId} {
      allow read, write: if isAdmin() || isAuthorizedOperator();
    }

    // ------------------ PROVEEDORES ------------------
    match /proveedores/{proveedorId} {
      allow read, write: if isAdmin() || isAuthorizedOperator();
    }

    // ------------------ INGRESOS ------------------
    match /ingresos/{ingresoId} {
      allow read, write: if isAdmin() || isAuthorizedOperator();

      // Subcolección de detalles del ingreso
      match /detalles/{detalleId} {
        allow read, write: if isAdmin() || isAuthorizedOperator();
      }
    }

    // ------------------ FACTURAS ------------------
    match /facturas/{facturaId} {
      allow read, write: if isAdmin() || isAuthorizedOperator();
    }

    // ------------------ VENTAS ------------------
    match /ventas/{ventaId} {
      allow read, write: if isAdmin() || isAuthorizedOperator();
    }

    // ------------------ MOVIMIENTOS DE STOCK ------------------
    match /movimientos_stock/{movId} {
      allow read, write: if isAdmin() || isAuthorizedOperator();
    }

    // ------------------ CONTADORES / AUX ------------------
    match /counters/{counterId} {
      allow read, write: if isAdmin() || isAuthorizedOperator();
    }

    // Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
